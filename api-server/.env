# FastAPI Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false
ENVIRONMENT=development
SECRET_KEY=your-secret-key-change-in-production

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# MongoDB Configuration
MONGODB_CONNECTION_STRING=mongodb://localhost:27017
MONGODB_DATABASE=discord_rag_chatbot
MONGODB_COLLECTION=document_chunks

# Azure AI Foundry Configuration
AZURE_AI_ENDPOINT=https://your-deployment-name.azurewebsites.net/api/v1/deployments/your-deployment-id/score
AZURE_AI_API_KEY=your-azure-ai-foundry-api-key
AZURE_AI_MODEL_NAME=DeepSeek-R1

# OpenAI Configuration (Alternative to Azure)
OPENAI_API_KEY=your-openai-api-key

# Azure OpenAI Configuration (Alternative to OpenAI)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_KEY=your-azure-openai-key
AZURE_OPENAI_DEPLOYMENT=your-deployment-name

# Discord Bot Configuration
DISCORD_TOKEN=your-discord-bot-token
DISCORD_PUBLIC_KEY=your-discord-public-key
DISCORD_APPLICATION_ID=your-discord-application-id

# RAG Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
MAX_CHUNK_SIZE=1000
CHUNK_OVERLAP=200
SIMILARITY_THRESHOLD=0.7
MAX_RESULTS=5

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
